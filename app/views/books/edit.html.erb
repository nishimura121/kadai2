

<h2>Editing Book</h2>

<%=form_for(@book) do |f| %>

<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %><br>
</p>
<p>
  <%= f.label :body %> <br>
  <%= f.text_area :body %>
